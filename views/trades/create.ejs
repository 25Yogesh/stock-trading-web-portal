<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Create New Trade</h4>
    </div>
    <div class="card-body">
      <form action="/trades" method="POST">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="stock_name" class="form-label">Stock Name</label>
            <input
              type="text"
              class="form-control"
              id="stock_name"
              name="stock_name"
              required
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="broker_name" class="form-label">Broker Name</label>
            <input
              type="text"
              class="form-control"
              id="broker_name"
              name="broker_name"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="quantity" class="form-label">Quantity</label>
            <input
              type="number"
              class="form-control"
              id="quantity"
              name="quantity"
              required
            />
            <small class="text-muted"
              >Positive for buy, negative for sell</small
            >
          </div>
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price per Unit</label>
            <input
              type="number"
              step="0.01"
              class="form-control"
              id="price"
              name="price"
              required
            />
          </div>
          <div class="col-md-4 mb-3">
            <label class="form-label">Trade Type</label>
            <div class="btn-group w-100" role="group">
              <input
                type="radio"
                class="btn-check"
                name="trade_type"
                id="buy"
                value="buy"
                checked
              />
              <label class="btn btn-outline-success" for="buy">Buy</label>
              <input
                type="radio"
                class="btn-check"
                name="trade_type"
                id="sell"
                value="sell"
              />
              <label class="btn btn-outline-danger" for="sell">Sell</label>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary px-4">Submit Trade</button>
      </form>
    </div>
  </div>
</div>
<script>
  document.querySelector("form").addEventListener("submit", function (e) {
    const quantity = document.getElementById("quantity");
    const tradeType = document.querySelector(
      'input[name="trade_type"]:checked'
    ).value;

    if (tradeType === "sell" && quantity.value > 0) {
      quantity.value = -quantity.value;
    } else if (tradeType === "buy" && quantity.value < 0) {
      quantity.value = Math.abs(quantity.value);
    }
  });
</script>
