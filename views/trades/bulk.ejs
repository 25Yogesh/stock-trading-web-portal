<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <div class="d-flex justify-content-between">
        <h4 class="mb-0">Bulk Upload Trades</h4>
        <a href="/document/sample.csv" download="" class="btn btn-warning"
          >Download Sample CSV
        </a>
      </div>
    </div>
    <div class="card-body">
      <form action="/trades/bulk" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="tradesFile" class="form-label">Upload CSV File</label>
          <input
            class="form-control"
            type="file"
            id="tradesFile"
            name="tradesFile"
            accept=".csv"
            required
          />
          <div class="form-text">
            CSV format: stock_name,quantity,broker_name,price<br />
            Example: AAPL,100,Broker A,150.50
          </div>
        </div>
        <button type="submit" class="btn btn-primary px-4">
          <i class="bi bi-upload me-2"></i>Upload Trades
        </button>
      </form>
    </div>
  </div>
</div>
